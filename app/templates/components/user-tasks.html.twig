{% if delete == null %}
	<div class="user-tasks-wrapper">
		<div class="task-container">
			<div class="user-tasks-header"></div>

			<div class="task-list-wrapper">
				{% if no_tasks == false %}
				{% for task in tasks %}
					{% if task[4] == 1 %}
						<div class="task good-task">
							<button class="delete-task" value="{{ task[0] }}">X</button>
							<h2 class="task-name">{{ task[1] }}</h2>
							<h3 class="task-description">{{ task[2] }}</h3>
							<h4>{{ task[3] }}</h4>
							<button class="do-task" value="{{ task[0] }}">Click!</button>
						</div>
					{% elseif task[4] == 0 %}
						<div class="task bad-task">
							<button class="delete-task" value="{{ task[0] }}">X</button>
							<h2 class="task-name">{{ task[1] }}</h2>
							<h3 class="task-description">{{ task[2] }}</h3>
							<h4>{{ task[3] }}</h4>
							<button class="do-task" value="{{ task[0] }}">Click!</button>
						</div>
					{% endif %}
				{% endfor %}
				{% elseif no_tasks == true %}
				<p>No tienes tareas seleccionadas aun!</p>
				{% endif %}
			</div>
		</div>
	</div>
